---
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import { ui, defaultLang } from '@/i18n/ui';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'ko' } },
    { params: { lang: 'ru' } },
    { params: { lang: 'ja' } },
  ];
}

const { lang } = Astro.params;
const t = ui[lang as keyof typeof ui] || ui[defaultLang];
---

<html lang={lang}>
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{t['contact.title']} | NEWGEN</title>
	</head>
	<body class="bg-[#F8F8F8] selection:bg-black selection:text-white">
    <section class="relative w-full min-h-screen overflow-x-hidden flex flex-col justify-between">
      
      <Header />

      {/* --- Background Blobs --- */}
      <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none">
          <div class="absolute top-[20%] left-[20%] w-[50vw] h-[50vw] bg-neutral-300 rounded-full blur-[120px] animate-pulse-slow mix-blend-multiply"></div>
      </div>

      {/* --- Main Content --- */}
      <main class="relative z-10 flex-1 flex flex-col justify-start px-4 pt-24 md:pt-32 md:px-12">
        
        {/* Large Title */}
        <div class="w-full max-w-[1920px] mx-auto text-center">
           <h1 class="text-[20vw] md:text-[15vw] leading-[0.8] font-black tracking-tighter text-[#1a1a1a] select-none" set:html={t['contact.title'].replace('\n', '<br/>')}>
          </h1>
        </div>

      </main>

        {/* Contact Glass Card */}
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[calc(100%-2rem)] md:w-[600px] bg-white/40 border border-white/50 rounded-3xl p-8 md:p-12 shadow-2xl z-20 overflow-hidden group hover:bg-white/50 transition-colors duration-500" style="backdrop-filter: blur(8px); -webkit-backdrop-filter: blur(8px);">

          
          <div class="relative z-10 flex flex-col gap-8 text-center">
            
            <div class="space-y-2">
              <p class="text-xs font-mono uppercase tracking-widest text-gray-500">{t['contact.inquiries']}</p>
              <a href="mailto:hello@newgen.studio" class="block text-2xl md:text-4xl font-bold hover:text-gray-600 transition-colors">
                hello@newgen.studio
              </a>
            </div>

            <div class="w-full h-px bg-black/5"></div>

            <div class="grid grid-cols-2 gap-4">
               <div class="flex flex-col gap-1">
                  <span class="text-[10px] font-mono uppercase text-gray-500">{t['contact.social']}</span>
                  <a href="#" class="text-lg font-bold hover:underline decoration-1 underline-offset-4">Instagram</a>
                  <a href="#" class="text-lg font-bold hover:underline decoration-1 underline-offset-4">Twitter</a>
               </div>
               <div class="flex flex-col gap-1">
                  <span class="text-[10px] font-mono uppercase text-gray-500">{t['contact.community']}</span>
                  <a href="#" class="text-lg font-bold hover:underline decoration-1 underline-offset-4">Discord</a>
                  <a href="#" class="text-lg font-bold hover:underline decoration-1 underline-offset-4">Behance</a>
               </div>
            </div>

            <div class="mt-4">
              <p class="text-[10px] font-mono text-gray-400">
                {t['contact.footer']}<br/>
                {t['contact.copyright']}
              </p>
            </div>
          </div>

          {/* Decorative Glint */}
          <div class="absolute top-0 left-[-100%] w-[50%] h-full bg-gradient-to-r from-transparent via-white/40 to-transparent skew-x-[-25deg] group-hover:left-[200%] transition-all duration-[1500ms] ease-in-out"></div>
        </div>

      {/* --- Footer Text --- */}
      <div class="relative z-10 w-full p-4 md:p-8 flex justify-center items-end pointer-events-none mix-blend-darken">
        <span class="text-[18vw] md:text-[10vw] leading-none font-black text-transparent stroke-text opacity-10">CONTACT</span>
      </div>

    </section>

    <style>
      .stroke-text {
        -webkit-text-stroke: 1px #000;
      }
      @keyframes pulse-slow {
        0%, 100% { opacity: 0.8; transform: scale(1); }
        50% { opacity: 0.6; transform: scale(1.05); }
      }
      .animate-pulse-slow {
        animation: pulse-slow 8s infinite ease-in-out;
      }
    </style>
	</body>
</html>
